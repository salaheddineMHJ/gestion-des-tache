<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" style="-fx-padding: 10;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gestion_de_tâches.TachesAVenirController">
    <Label text="Tâches à Venir" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    
    <!-- Conteneur pour les cartes de tâches -->
    <FlowPane fx:id="tachesFlowPane" hgap="10" vgap="10" alignment="CENTER">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
    </FlowPane>

   <HBox spacing="10" alignment="CENTER_RIGHT">
    <Button text="Retour" onAction="#retourAMain" styleClass="retourButton"/>
    <Button text="Réinitialiser" onAction="#resetFilter" styleClass="retourButton"/>
</HBox>
</VBox>